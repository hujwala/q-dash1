<% if @dashboards.any? %>
  // Fill the right box with first dashboard details in the list
  $('#div_dashboard_show').html("<%= escape_javascript(render(:partial=>'show')) %>");
  initPopovers();

  // Rendering the item list
  $('#div_dashboard_index').html("<%= escape_javascript(render(:partial=>'index')) %>");
<% else %>
  var noResultsText = "<%= escape_javascript(theme_panel_message(I18n.translate('forms.no_results')))%>";
  $('#div_dashboard_index').html(noResultsText);
  $('#div_dashboard_show').html(noResultsText);
  $('#div_dashboard_details').html("");
<% end %>